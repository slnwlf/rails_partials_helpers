<h1>Log In</h1>
<hr>
<%= form_for :user, url: "/sessions", method: :post do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Your email", class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Your password", class: "form-control" %>
  </div>
  <%= f.submit "Log In", class: "btn btn-block btn-default" %>
<% end %>
<br>
<p>Don't have an account? <%= link_to "Click here", signup_path %> to sign up.</p>