<h1><%= @recipe.name %></h1>
<hr>
<p><%= @recipe.instructions %></p>
<p class="small text-muted">
  Posted <%= time_ago_in_words(@recipe.created_at) %> ago by <a href="/users/<%= @recipe.user.id %>"><%= @recipe.user.email %></a>
</p>

<!-- only let user who wrote the recipe see edit/delete buttons -->
<% if current_user && current_user == @recipe.user %>
  <hr>
  <p>
    <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-default">Edit Recipe</a>
    <a href="/recipes/<%= @recipe.id %>" data-method="delete" class="btn btn-default" >Delete Recipe</a>
  </p>
<% end %>